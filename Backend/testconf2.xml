<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Configuration>
    <DonnéesDeConnection>
        <source ip="127.0.0.1" motdepasse="root" nomBase="TestPFE" port="3306" utilisateur="root"/>
        <cible hbase.master="localhost" hbase.zookeeper.property.clientPort="2181" hbase.zookeeper.quorum="localhost"/>
    </DonnéesDeConnection>
    <Transformations>
        <Transformation id="0" idLigne="#userId" tablecible="EMPLOYEES" tablesource="user" typeidLigne="java.lang.Long">
            <CleRicheDeMappage cartographieformule="#firstName+#lastName  " colonnecible="FAMILY_EMPLOYEE:Fullname"
                               colonnesource="lastName,firstName" type="java.lang.String"/>
            <CleRicheDeMappage cartographieformule="#salaire " colonnecible="FAMILY_EMPLOYEE: salaire"
                               colonnesource="salaire" condition="salaire &gt;300" converter="NumberConverter"
                               pattern="###,###.##" type="java.lang.String"/>
            <Document clejointure="user.userId=address.userByUserId" colonnescibles="ADDRESS_EMPLOYEE:address"
                      colonnessources="pays,addressId,ville,rue,codePostal" tablesource="address"
                      typejointure="LEFT OUTER JOIN"/>
            <Document clejointure="addressdetails.address_id=address.addressId"
                      colonnescibles="ADDRESS_EMPLOYEE:address_details"
                      colonnessources="id_detail,address_id,nom_detail" tablesource="addressdetails"
                      typejointure="LEFT OUTER JOIN"/>
        </Transformation>
    </Transformations>
</Configuration>